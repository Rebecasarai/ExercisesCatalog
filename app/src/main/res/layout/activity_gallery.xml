<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rebecasarai.github.com.exercisescatalog.Gallery">
    <TableRow android:id="@+id/table" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/titulo"
            android:text="@string/gallerytitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:textAlignment="center"
            />
    </TableRow>
    <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">

        <ImageView
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/scrn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

</TableLayout>
